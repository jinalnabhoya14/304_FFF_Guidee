<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.circularreveal.CircularRevealRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.CharactersActivity">
    <com.google.android.material.circularreveal.CircularRevealRelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btn_back"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_back"
            app:contentPadding="@dimen/_7sdp"
            android:layout_centerVertical="true"/>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/txt_weapon"
            android:gravity="center_vertical"
            android:textSize="@dimen/_18sdp"
            android:layout_toRightOf="@id/btn_back"
            android:textColor="@color/colorAccent"
            app:fontFamily="@font/poppins_semibold"
            android:layout_marginStart="@dimen/_10sdp"/>
    </com.google.android.material.circularreveal.CircularRevealRelativeLayout>
    <com.google.android.material.circularreveal.CircularRevealRelativeLayout
        android:id="@+id/ad_170"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_170sdp"
        android:layout_below="@+id/toolbar"/>
    <com.google.android.material.circularreveal.CircularRevealRelativeLayout
        android:id="@+id/ad_40sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_margin="@dimen/_2sdp"
        android:layout_below="@+id/ad_170"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ad_40sdp"
        android:layout_above="@+id/ad_bottom_native"/>
    <com.google.android.material.circularreveal.CircularRevealRelativeLayout
        android:id="@+id/ad_bottom_native"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_margin="@dimen/_2sdp"
        android:layout_alignParentBottom="true"/>

</com.google.android.material.circularreveal.CircularRevealRelativeLayout>